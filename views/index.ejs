<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/css/bootstrap.min.css' />
    
    	<!-- jQuery -->
    <script src="/js/jquery.js"></script>
    
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>

    <script src="/angular/controller.js"></script>	
    <!-- Custom Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">

</head>


<body ng-app="myApp" ng-controller="myCtrl">

    <!-- Header -->
    <header class="header">
            <h2 style="text-align:center;"><%= title %></h2>
            <div class="row">
	        <div class="col-lg-3"></div>
	        <div class="col-lg-6 text-center">
		   <form name="addF">
			<div class="input-group">
			    <input type="number" class="form-control" ng-model="add1" placeholder="Integer 1" required/>
			    <span class="input-group-addon"> + </span>
			    <input type="number" class="form-control" ng-model="add2" placeholder="Integer 2" required/>
			</div>
		   <input type="submit" ng-click="add()" ng-disabled="addF.$invalid" class="btn btn-primary" value="ADD"></input>
		   </form>
		   <hr>
		   <form name="divideF">
	        <div class="input-group">
		        <input type="number" class="form-control" ng-model="divide1" placeholder="Integer 1" required/>
		        <span class="input-group-addon"> / </span>
		        <input type="number" class="form-control" ng-model="divide2" placeholder="Integer 2" required/>
		    </div>
		   <input type="submit" ng-click="divide()" ng-disabled="divideF.$invalid" class="btn btn-primary" value="DIVIDE"></input>
		   </form>
		   <hr>
		   <form name="sendMsg">
		   <div class="input-group" style="margin: 0 auto;">
		        <input type="text" class="form-control" ng-model="name" placeholder="Enter your name" required />
		    </div>
	        <input type="submit" ng-click="msg()" ng-disabled="sendMsg.$invalid" class="btn btn-primary" value="Send Message"></input>
	        </form>
	        <hr>
	        <div class="input-group" style="margin: 0 auto;">
	        	<input type="submit" ng-click="getTime()" class="btn btn-primary" value="Get Day & Time"></input>
	        </div>
	      
		   </div>
		   <div class="col-lg-3"></div>
		   </div><!-- /.row -->
		   <br>
    </header>

   

</body>

</html>
